{% extends 'AppServerBundle::base.html.twig' %}

{% block content -%}
    <h1>Administration des dépôts GIT</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Path</th>
                <th>Nom</th>
                <th>Branching</th>
                <th>Deployinfo</th>
                <th>Deploymethod</th>
                <th>Repo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_depot_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.path }}</td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.branching }}</td>
                <td>{{ entity.deployInfo }}</td>
                <td>{{ entity.deployMethod }}</td>
                <td>{{ entity.repo }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_depot_show', { 'id': entity.id }) }}">voir</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_depot_edit', { 'id': entity.id }) }}">modifier</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_depot_new') }}">
                Ajouter un nouveau dépôt
            </a>
        </li>
    </ul>
    {% endblock %}
