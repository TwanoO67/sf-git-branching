<script type="text/ng-template" id="subview/branche.html">

  <h3>Liste des branches</h3>

  <p>{% for branch in gitrepo.getBranches() %}
    <a class="list-group-item
    {% if branch == gitrepo.getMainBranch() %}
     active
    {% endif %}
    ">
      <span ng-click="changeBranche('{{ branch.fullRef }}');" title="Permet de changer pour cette branche">{{ branch.name }} ({{ branch.fullRef }})</span>
      <input type="button" title="Suppression de la branche" ng-click="supprimeBranche('{{ branch.fullRef }}');" value="X"></input>
    </a><br/>
  {% endfor %}</p>

</script>
